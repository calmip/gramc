{% extends 'base.html.twig' %}

{% block body %}
    <h1>Statut</h1>

    <table>
        <tbody>
            <tr>
                <th>Idstatut</th>
                <td>{{ statut.idStatut }}</td>
            </tr>
            <tr>
                <th>Libellestatut</th>
                <td>{{ statut.libelleStatut }}</td>
            </tr>
            <tr>
                <th>Permanent</th>
                <td>{% if statut.permanent %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('statut_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('statut_edit', { 'id': statut.idStatut }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
