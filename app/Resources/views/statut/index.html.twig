{% extends 'base.html.twig' %}

{% block body %}
    <h1>Statuts list</h1>

    <table>
        <thead>
            <tr>
                <th>Idstatut</th>
                <th>Libellestatut</th>
                <th>Permanent</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for statut in statuts %}
            <tr>
                <td><a href="{{ path('statut_show', { 'id': statut.idStatut }) }}">{{ statut.idStatut }}</a></td>
                <td>{{ statut.libelleStatut }}</td>
                <td>{% if statut.permanent %}Yes{% else %}No{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('statut_show', { 'id': statut.idStatut }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('statut_edit', { 'id': statut.idStatut }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('statut_new') }}">Create a new statut</a>
        </li>
    </ul>
{% endblock %}
